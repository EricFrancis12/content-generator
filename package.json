{
    "name": "docker-content-generator",
    "version": "1.0.0",
    "description": "",
    "main": "",
    "scripts": {
        "dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
        "dev_svc": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml -f docker-compose.dev.svc.yml up",
        "build": "bash scripts/build.sh",
        "build_node": "node scripts/build.js",
        "start": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
        "stop": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml down",
        "lint": "eslint . --ext .ts --ext .tsx",
        "test": "npx jest --testPathIgnorePatterns=smoke.test.ts",
        "sources_test": "ts-node scripts/sources_test.ts",
        "prepare": "husky install",
        "preinstall": "node services/api/scripts/_prestart.js",
        "postinstall": "npm run install:_shared && npm run install:apply-filters-engine && npm run install:campaign-engine && npm run install:cleanup-engine && npm run install:download-engine && npm run install:api && npm run install:publish-engine && npm run install:ui",
        "install:_shared": "cd services/_shared && npm install",
        "install:apply-filters-engine": "cd services/apply-filters-engine && npm install",
        "install:campaign-engine": "cd services/campaign-engine && npm install",
        "install:cleanup-engine": "cd services/cleanup-engine && npm install",
        "install:download-engine": "cd services/download-engine && npm install",
        "install:api": "cd services/api && npm install",
        "install:publish-engine": "cd services/publish-engine && npm install",
        "install:ui": "cd services/ui && npm install"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/xml2js": "^0.4.14",
        "@typescript-eslint/eslint-plugin": "^7.6.0",
        "@typescript-eslint/parser": "^7.6.0",
        "axios": "^1.7.2",
        "eslint": "^8.0.0",
        "eslint-plugin-react": "^7.34.1",
        "husky": "^8.0.0",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.2",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.3",
        "xml2js": "^0.6.2",
        "zod": "^3.23.8"
    },
    "lint-staged": {
        "**/*.{ts,tsx}": "eslint"
    }
}